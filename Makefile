#------------------------------------------------------------------------------
# Naoned pgweb image
#------------------------------------------------------------------------------

TAG?=latest

#------------------------------------------------------------------------------

.DEFAULT_GOAL := help

#------------------------------------------------------------------------------

build: ## build the image
	docker build -t naoned/pgweb:$(TAG) .

#------------------------------------------------------------------------------

help:
	@echo "========================================"
	@echo "INAO PUBLICATION Makefile"
	@echo "========================================"
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "\033[36m%-25s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)
	@echo "========================================"

.PHONY: help
